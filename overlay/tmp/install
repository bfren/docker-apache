#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add apache user.
#======================================================================================================================

bf-adduser apache


#======================================================================================================================
# Get Apache Version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bf-debug "Apache version ${VERSION}."


#======================================================================================================================
# Install Apache and dependencies.
#======================================================================================================================

bf-echo "Installing Apache v${VERSION}..."
apk add --no-cache \
    ca-certificates \
    apache2=${VERSION} \
    apache2-ctl=${VERSION} \
    apache2-http2=${VERSION} \
    apache2-utils=${VERSION}
mkdir -p /var/run/httpd
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-debug "Cleaning up default Apache configuration and files."
rm -rf /var/www/localhost/*


#======================================================================================================================
# Create and link Apache directories.
#======================================================================================================================

bf-debug "Creating Apache directories."

bf-debug "Linking /www to /var/www/localhost/htdocs."
ln -s /www /var/www/localhost/htdocs
